<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

<TextView
    android:id="@+id/newsTitle"
    android:textSize="20sp"
    android:textColor="@color/black"
    android:text="父亲节，我们写了一封信"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/newsIsTop"
        android:text="置顶"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:textSize="11sp"
        android:textColor="@color/tb"
        android:layout_below="@+id/newsTitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/newsFrom"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/newsTitle"
        android:layout_toRightOf="@+id/newsIsTop"
        android:text="中新网移动版"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/newsPinglun"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/newsTitle"
        android:layout_toRightOf="@+id/newsFrom"
        android:text="1020评论"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/newsTime"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/newsTitle"
        android:layout_toRightOf="@+id/newsPinglun"
        android:text="5分钟前"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />


</RelativeLayout>