<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/tb">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/goodPic"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:scaleType="fitStart"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/goodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goodPic"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="羽绒服"
            android:textColor="@color/black"
            android:textSize="13sp" />



        <TextView
            android:id="@+id/goodDetatil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goodName"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:text="详情"
            android:textColor="@color/tb"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/size"
            android:layout_below="@+id/goodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/goodDetatil"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:text="500人已付款"
            android:textSize="11sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>